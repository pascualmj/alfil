{
  "name": "alfil",
  "version": "0.6.6",
  "description": "Minimal and lightweight data validation Javascript library.",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pascualmj/alfil.git"
  },
  "keywords": [
    "validation",
    "schema",
    "lightweight",
    "minimalistic",
    "forms",
    "fields",
    "formfields"
  ],
  "homepage": "https://github.com/pascualmj/alfil",
  "scripts": {
    "dev": "node sandbox.js",
    "lint": "eslint src/* test/*",
    "lint:fix": "eslint --fix src/* test/*",
    "format": "prettier --write 'src/**/*.js' 'test/**/*.js'",
    "build": "parcel build src/index.js -d lib --global Alfil --no-source-maps --no-cache",
    "test": "jest test/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest test/*"
    ]
  },
  "author": {
    "name": "@pascualmj Manuel Pascual"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5"
  }
}
