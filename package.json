{
  "name": "pulpo",
  "version": "0.2.0",
  "description": "Minimal and lightweight data validation Javascript library.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pascualmj/pulpo.git"
  },
  "homepage": "https://github.com/pascualmj/pulpo",
  "scripts": {
    "dev": "node pulpo.playground.js",
